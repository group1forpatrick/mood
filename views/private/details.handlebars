<body>
    <div id="fullpage">
        <div class="section fp-auto-height">
            <span class="login100-form-title p-b-34" id="playlist-header">
                üéß{{playlist.name}}üéß with <span class="weather-tag-text">#{{playlist.weatherTag}}</span>
            </span>
            {{!-- wrap up slides with handlebars --}}
            <div class="music-player">
                <div class="details">
                    <div id="left-side">
                        <span class="coverart">
                            <img src="{{playlist.playlistCover}}"></img>
                        </span>
                    </div>
                    <div id="right-side">
                        <div class="tracklist">
                            <ol>
                                {{#each playlist.tracks}}
                                <li>
                                    <span class="playing fa fa-play"></span>
                                    <span class="track-number">{{@index}}</span>
                                    <span class="track-name">{{this.name}}</span>
                                    <span
                                        class="track-duration">{{this.duration.minutes}}:{{this.duration.seconds}}</span>
                                </li>
                                {{/each}}
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="commentbox login100-form-title">
                <span class="commentbox-title">
                    Comment
                </span>
                <form method="POST" action="/details" class="commentbox-input">
                    <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type comment">
                        <input id="playlist_id" name="playlist_id" type="hidden" value={{playlist.playlist_id}}>
                        <input id="comment" class="input100" type="text" name="comment"
                            placeholder="Leave your comment!">
                        <span class="focus-input100"></span>
                    </div>
                </form>
                <div class="txt3">
                    <ol>
                        <li>comment1</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
